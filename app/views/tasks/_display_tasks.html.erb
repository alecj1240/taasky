<% # tasks to small, medium, large array %>
<% @tasks.each do |task| %>
    <% if task.time <= 20 %>
      <% @small_tasks.push(task) %>
    <% end %>

    <% if task.time > 20 && task.time <= 45 %>
      <% @medium_tasks.push(task) %>
    <% end %>

    <% if task.time > 45 %>
      <% @large_tasks.push(task) %>
    <% end %>
<% end %> 