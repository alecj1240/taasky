<% loop_counter = 1 %>

<% # for each task today, and that is the user's own %>
<% @today_tasks.each do |task| %>
  
  <% case loop_counter %>
    <% when 1, 2, 3, 4 %>

      <% if task.time <= 20 %>
        <% task.day_time = @day_time_assign %>
        <%= task.name + " - " + task.day_time %>
        
      <% end %>

    <% else %>
      <%= task.inspect %>
  <% end %>

  <% loop_counter += 1 %>

<% # end of today_tasks .each loop %>
<% end %>